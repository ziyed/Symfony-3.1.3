{% extends 'base.html.twig' %}

{% block body %}
    <h1>View Role</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if role.createdAt %}{{ role.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if role.updatedAt %}{{ role.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <br/>
    <br/>
    <a class="btn btn-success" href="{{ path('roles_index') }}">Back to the list</a>
    <a class="btn btn-success" href="{{ path('roles_edit', { 'id': role.id }) }}">Edit</a>    
{% endblock %}
